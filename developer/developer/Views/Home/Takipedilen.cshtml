                    <a href="http://localhost:62771/Home/Friends_profil"><img src="@takip.ProfileImageUrlHttps" class="img-circle" usemap="#planetmap" style="position:absolute; left:50px; top:95px;" /></a><br /><br />


                    <a href="http://localhost:62771/Home/Friends_profil"> @takip.Name </a>

                </div>




            </div>

        }
    </div>

</body>
</html>
